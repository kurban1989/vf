<div class="Container Container__top--large">
    <div class="Container__row">
        <div class="Container__col-1of2">
            <div class="Product__images">

                <div class="Product__thumbnails js-imagesSliderNav">
                    <% if(images && images != '' && images.length > 5) { imgPreview = images.split(','); %>
                        <% imgPreview.forEach(function(img){ %>
                            <% if(img.length > 2) { %>
                            <img data-src="<%= img %>" alt="">
                            <% } %>
                        <% }); %>
                    <% } %>
                </div>

                <div class="Product__images--slider js-imagesSlider">
                    <% if(images && images != '' && images.length > 5) { %>
                        <% imgPreview.forEach(function(img){ %>
                            <% if(img.length > 2) { %>
                            <span><img src="<%= img %>" alt=""></span>
                            <% } %>
                        <% }); %>
                    <%} else {%>
                    <span><img data-src="/img/svg/no-photo.svg" alt=""></span>
                    <% } %>
                </div>

