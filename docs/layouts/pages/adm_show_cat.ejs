<div class="Content-table__header">
        <h1 class="js-headerCab">Категории</h1>
        <div>
            <button class="Content-table__add-btn js-btnAddProd" title="Добавить Категорию на сайт" data-src="setNewWindowAdd">&nbsp;+&nbsp;</button>
            &nbsp;&nbsp;
            <button class="Content-table__add-btn Button--danger js-btnAddProd" title="Удалить Категорию" data-src="deleteProd">
                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 22 20" enable-background="new 0 0 22 20" xml:space="preserve" style="width: 20px;height: 16px;"><path fill="#fff" d="M18,1h-5c0-0.55-0.45-1-1-1h-2C9.45,0,9,0.45,9,1H4C3.45,1,3,1.45,3,2s0.45,1,1,1h14c0.55,0,1-0.45,1-1 S18.55,1,18,1z"></path><path fill="#fff" d="M16,4H6C4.9,4,4,4.9,4,6v12c0,1.1,0.9,2,2,2h10c1.1,0,2-0.9,2-2V6C18,4.9,17.1,4,16,4z M8,17 c0,0.55-0.45,1-1,1s-1-0.45-1-1V7c0-0.55,0.45-1,1-1s1,0.45,1,1V17z M12,17c0,0.55-0.45,1-1,1s-1-0.45-1-1V7c0-0.55,0.45-1,1-1 s1,0.45,1,1V17z M16,17c0,0.55-0.45,1-1,1s-1-0.45-1-1V7c0-0.55,0.45-1,1-1s1,0.45,1,1V17z"></path></svg>
            </button>
        </div>
    </div>
    <div class="Content-table__main">
        <div class="Content-table__wrapper-table js-scrollContent simplebar">
            <div class="Content-table__table">
                <div class="Content-table__panel-head">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" height="32px" id="Layer_1" style="enable-background:new 0 0 32 32;" version="1.1" viewBox="0 0 32 32" width="32px" xml:space="preserve"><path d="M4,10h24c1.104,0,2-0.896,2-2s-0.896-2-2-2H4C2.896,6,2,6.896,2,8S2.896,10,4,10z M28,14H4c-1.104,0-2,0.896-2,2  s0.896,2,2,2h24c1.104,0,2-0.896,2-2S29.104,14,28,14z M28,22H4c-1.104,0-2,0.896-2,2s0.896,2,2,2h24c1.104,0,2-0.896,2-2  S29.104,22,28,22z"/></svg>
                    <h3>Категории</h3>
                </div>
                <div class="Content-table__row">
                    <div class="Content-table__cell">
                        <input type="checkbox" class="Content-table__filter--form-control checkbox" onclick="dom.query('input[name*=\'selected\']').prop('checked', this.checked);">
                    </div>
                    <div class="Content-table__cell"><p class="title">Изображение</p></div>
                    <div class="Content-table__cell"><p class="title">Наименование категории</p></div>
                    <div class="Content-table__cell"><p class="title">Родительская категория</p></div>
                    <div class="Content-table__cell"><p class="title">Описание</p></div>
                    <div class="Content-table__cell"><p class="title">Действия</p></div>
                </div>
                <% table.forEach(function(item){ %>
                    <% var imgPreview; %>
                    <div class="Content-table__row">
                        <div class="Content-table__cell">
                            <input type="checkbox" class="Content-table__filter--form-control checkbox" name="selected[]" data-product_id="<%=item.id%>">
                        </div>
                        <% if(item.images && item.images != '' && item.images.length > 5) {imgPreview = item.images.split(','); %>
                        <div class="Content-table__cell"><img class="preview" data-src="<%- imgPreview[0] %>" alt=""></div>
                        <%} else {%>
                        <div class="Content-table__cell"><img class="preview" data-src="/img/svg/no-photo.svg" alt=""></div>
                        <% } %>
                        <div class="Content-table__cell"><p class="text"><%- item.name %></p></div>
                        <div class="Content-table__cell"><p class="text"><%- item.parent_cat %></p></div>
                        <div class="Content-table__cell"><p class="text"><%- item.description %></p></div>
                        <div class="Content-table__cell">
                            <button class="Content-table__add-btn js-btnAddProd" title="Редактирование категории" style="font-size: 14px;" data-src="setNewWindowAdd" data-product_id="<%=item.id%>">
                                <svg class="pensal" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 22 20" enable-background="new 0 0 22 20" xml:space="preserve"><g><path fill="#fff" d="M17.73,3.27c-1.48-1.48-2.591-1.258-2.591-1.258L9.958,7.193l-5.922,5.922L3,18l4.885-1.036l5.922-5.922 l5.182-5.181C18.988,5.861,19.21,4.75,17.73,3.27z M7.594,16.377l-1.665,0.359c-0.161-0.301-0.354-0.601-0.709-0.956 c-0.354-0.354-0.655-0.547-0.956-0.709l0.359-1.665l0.481-0.482c0,0,0.906,0.018,1.929,1.042c1.023,1.023,1.042,1.93,1.042,1.93 L7.594,16.377z"></path></g></svg>
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>